<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_dark"
    android:orientation="vertical"
    android:weightSum="1">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Please select your mood"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.15"
        android:adjustViewBounds="false"
        android:contentDescription="Life"
        android:contextClickable="true"
        android:cropToPadding="false"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/life" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.15"
        android:contentDescription="Happy"
        android:scaleType="fitXY"
        android:onClick="goToHappyPage"
        app:srcCompat="@drawable/happy" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.15"
        android:contentDescription="Heartbreak"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/heartbreak" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_weight="0.15"
        android:contentDescription="Lonely"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/lonely" />
</LinearLayout>